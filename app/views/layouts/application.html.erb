<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <link href="https://plus.google.com/107355867909504468216" rel="publisher">

  <meta property="og:title" content="<%= yield :title %>">
  <meta property="og:image" content="<%= yield :social_image %>">
  <meta property="og:site_name" content="brick.media: small podcasts from the human edge">
  <meta property="og:description" content="<%= yield :social_description %>">

</head>
<body>

<div id="notice"><%= notice %></div>

<header class="navigation" role="banner">
  <div class="inner">
    <nav role="navigation" class="navigation">
      <a href="/" class="site-name"><%= Brick::SITENAME %><% if @podcast %> &gt; <% end %></a>
      <% if @podcast %>
        <a href="<%= podcast_path(@podcast) %>" class="podcast-name"><%= @podcast.title %></a>
      <% end %>
    </nav>

    <ul class="social">
      <li><a href="http://twitter.com/brickcaster"><i class="icon-twitter"></i></a></li>
      <li><a href="http://facebook.com/brickcaster"><i class="icon-facebook"></i></a></li>
      <li><a href="https://plus.google.com/107355867909504468216" rel="publisher"><i class="icon-google-plus"></i></a></li>
    </ul>
  </div>
</header>

<section class="social-sharing">

  <a href="https://twitter.com/home?status=<%= request.base_url %>"><img src="http://s9.postimg.org/9lptzzutn/twitter.png" alt="Twitter link" /></a><a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.base_url %>"><img src="http://s9.postimg.org/wboysze17/facebook.png" alt="Facebook link" /></a><a href="https://plus.google.com/share?url=<%= request.base_url %>"><img src="http://s9.postimg.org/c1n203nij/google.png" alt="Google Plus link" /></a>

</section>

<% if @podcast %>
  <section id="podcast-header">
    <%= render :partial => "podcasts/header", :locals => {:podcast => @podcast} %>
  </section>
<% end %>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
